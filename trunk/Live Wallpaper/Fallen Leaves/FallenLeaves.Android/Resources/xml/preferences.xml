<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Fallen Leaves">

    <PreferenceCategory android:title="Sky, Clouds and Wind">
        <ListPreference
            android:key="sky"
            android:title="Sky"
            android:summary="Choice of background"
            android:entryValues="@array/sky_ids"
            android:entries="@array/sky_names"
            android:enabled="false"
            android:defaultValue="4" />
        <ListPreference
            android:key="clouds_count"
            android:title="Clouds"
            android:summary="Cloud amount"
            android:entryValues="@array/factors"
            android:entries="@array/factor_countNames"
            android:defaultValue="1" />
        <ListPreference
            android:key="wind"
            android:title="Wind Force"
            android:summary="The nature of the wind"
            android:entryValues="@array/wind_ids"
            android:entries="@array/wind_names"
            android:enabled="false"
            android:defaultValue="0" />
        <ListPreference
            android:key="wind_dir"
            android:title="Wind Direction"
            android:summary="Wind Direction"
            android:entryValues="@array/wind_dir_ids"
            android:entries="@array/wind_dir_names"
            android:enabled="false"
            android:defaultValue="0" />
        <CheckBoxPreference
            android:key="wind_show"
            android:title="Show Wind Bar"
            android:summary="Show wind indicator"
            android:enabled="false"
            android:defaultValue="0" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Ground and Grass">
        <ListPreference
            android:key="grass_count"
            android:title="Grass"
            android:summary="The density of grass"
            android:entryValues="@array/factors"
            android:entries="@array/factor_countNames"
            android:defaultValue="1" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Trees">
        <ListPreference
            android:key="layout"
            android:summary="Relative position"
            android:title="Layout"
            android:entryValues="@array/layout_ids"
            android:entries="@array/layout_names"
            android:defaultValue="0" />
        <ListPreference
            android:key="fallen_leafs_count"
            android:title="Fallen Leaves Count"
            android:summary="Number of falling leaves"
            android:entryValues="@array/factors"
            android:entries="@array/factor_countNames"
            android:enabled="false"
            android:defaultValue="1" />
        <ListPreference
            android:key="fallen_leafs_scale"
            android:title="Fallen Leaves Scale"
            android:entryValues="@array/factors"
            android:entries="@array/factor_sizeNames"
            android:summary="Size of falling leaves"
            android:enabled="false"
            android:defaultValue="1" />
    </PreferenceCategory>

