<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Falling Leaves">

    <PreferenceCategory android:title="Controls">
        <CheckBoxPreference
            android:key="settings_on_3taps"
            android:title="Settings gestures"
            android:summary="Show the Settings by triple-tapping the screen"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Graphic Settings">
        <ListPreference
            android:key="textureQuality"
            android:title="Quality of Textures"
            android:entryValues="@array/textureQuality_ids"
            android:entries="@array/textureQuality_names"
            android:defaultValue="0" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Sky, Clouds and Wind">
        <ListPreference
            android:key="sky"
            android:title="Sky"
            android:entryValues="@array/sky_ids"
            android:entries="@array/sky_names"
            android:defaultValue="sky4" />
        <ListPreference
            android:key="clouds_count"
            android:title="Clouds"
            android:entryValues="@array/factors"
            android:entries="@array/factor_countNames"
            android:defaultValue="1" />
        <ListPreference
            android:key="wind"
            android:title="Wind Force"
            android:entryValues="@array/wind_ids"
            android:entries="@array/wind_names"
            android:defaultValue="0" />
        <ListPreference
            android:key="wind_dir"
            android:title="Wind Direction"
            android:entryValues="@array/wind_dir_ids"
            android:entries="@array/wind_dir_names"
            android:defaultValue="0" />
        <CheckBoxPreference
            android:key="wind_show"
            android:title="Show Wind Bar"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Ground and Grass">
        <ListPreference
            android:key="grass_count"
            android:title="Grass"
            android:entryValues="@array/factors"
            android:entries="@array/factor_countNames"
            android:defaultValue="1" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Trees">
        <ListPreference
            android:key="layout"
            android:title="Layout"
            android:entryValues="@array/layout_ids"
            android:entries="@array/layout_names"
            android:defaultValue="0" />
        <ListPreference
            android:key="fallen_leafs_count"
            android:title="Falling Leaves Count"
            android:entryValues="@array/factors"
            android:entries="@array/factor_countNames"
            android:defaultValue="1" />
        <ListPreference
            android:key="fallen_leafs_scale"
            android:title="Falling Leaves Scale"
            android:entryValues="@array/factors"
            android:entries="@array/factor_sizeNames"
            android:defaultValue="1" />
    </PreferenceCategory>


    <PreferenceCategory android:title="Rest">
        <CheckBoxPreference
            android:key="showRate"
            android:title="Show Prompt of Rate"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="See also">
        <PreferenceScreen android:title="Visit Our Web Page">
            <intent android:action="android.intent.action.VIEW" android:data="https://play.google.com/store/apps/details?id=com.divarc.fallenleaves" />
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>
