<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Настройки сцены">
        <ListPreference
            android:entryValues="@array/sky_ids"
            android:entries="@array/sky_names"
            android:key="sky"
            android:summary="Description of skys"
            android:title="Sky"
            android:defaultValue="4" />
        <ListPreference
            android:entryValues="@array/wind_ids"
            android:entries="@array/wind_names"
            android:key="wind"
            android:summary="Description of winds"
            android:title="Wind"
            android:defaultValue="0" />
        <ListPreference
            android:entryValues="@array/layout_ids"
            android:entries="@array/layout_names"
            android:key="layout"
            android:summary="Description of layouts"
            android:title="Layout"
            android:defaultValue="0" />
        <ListPreference
            android:entryValues="@array/fallen_leafs_count_ids"
            android:entries="@array/fallen_leafs_count_names"
            android:key="fallen_leafs_count"
            android:summary="Description of winds"
            android:title="Fallen Leaves"
            android:defaultValue="1" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Смотрите так же...">
        <Preference
            android:icon="@drawable/thumb01"
            android:title="Scene One"
            android:summary="This works almost like a button"
            android:key="scene01" />
        <Preference
            android:icon="@drawable/thumb02"
            android:title="Scene Two"
            android:summary="This works almost like a button"
            android:key="scene02" />
        <Preference
            android:icon="@drawable/thumb03"
            android:title="Scene Three"
            android:summary="This works almost like a button"
            android:key="scene03" />
        <PreferenceScreen android:title="Ссылочка на сайт"
            android:summary="Тапай сюда">
            <intent android:action="android.intent.action.VIEW" android:data="http://www.android.com" />
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>